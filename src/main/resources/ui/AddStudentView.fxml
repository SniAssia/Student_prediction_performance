<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.ComboBox?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.studentperformance.controllers.AddStudentController"
      spacing="15" alignment="CENTER" style="-fx-padding: 20;">

    <Label text="Add New Student" style="-fx-font-size: 20;"/>

    <TextField fx:id="nameField" promptText="Student Name" prefWidth="250"/>
    <TextField fx:id="sexField" promptText="Sex (M/F)" prefWidth="250"/>
    <TextField fx:id="ageField" promptText="Age" prefWidth="250"/>
    <ComboBox fx:id="classLevelBox" promptText="Class (CI1, CI2, CI3)" prefWidth="250"/>
    <Button text="Save" onAction="#onSaveClicked" prefWidth="120"/>
    <Button text="Cancel" onAction="#onCancelClicked" prefWidth="120"/>

</VBox>
